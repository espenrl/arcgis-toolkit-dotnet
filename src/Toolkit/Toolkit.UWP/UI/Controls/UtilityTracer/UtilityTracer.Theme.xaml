<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="using:Esri.ArcGISRuntime.Toolkit.UI.Controls">

  <Style TargetType="controls:UtilityTracer" >
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="controls:UtilityTracer">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Padding="{TemplateBinding Padding}"
                  Margin="{TemplateBinding Margin}"
                  MinWidth="{TemplateBinding MinWidth}"
                  MaxWidth="{TemplateBinding MaxWidth}">
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>
              <TextBlock Text="Select a utility network"
                         Visibility="{Binding ElementName=UtilityNetworkPicker, Path=Visibility}"
                         FontWeight="Bold"
                         Margin="2"/>
              <ComboBox x:Name="UtilityNetworkPicker"
                        HorizontalContentAlignment="Stretch"
                        Visibility="Collapsed"
                        Margin="2"
                        Grid.Row="1" >
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
              <TextBlock Text="Select a trace"
                         Visibility="{Binding ElementName=TraceConfigurationPicker, Path=Visibility}"
                         FontWeight="Bold"
                         Margin="2"
                         Grid.Row="2"/>
              <ComboBox x:Name="TraceConfigurationPicker"
                        HorizontalContentAlignment="Stretch"
                        Visibility="Collapsed"
                        Margin="2"
                        Grid.Row="3" >
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
              <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition />
                  <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button x:Name="TraceButton"
                        Content="Trace"
                        Margin="2" />
                <Button x:Name="ResetButton"
                        Content="Reset"
                        Margin="2"
                        Grid.Column="1" />
              </Grid>
              <ProgressBar x:Name="BusyIndicator"
                           Visibility="Collapsed"
                           Margin="2"
                           Grid.Row="5" />
              <TextBlock x:Name="StatusLabel"
                         TextWrapping="Wrap"
                         Margin="2"
                         Grid.Row="6" />
            </Grid>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
